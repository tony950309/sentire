<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jiachenggu.sentirepro.ques_compare">

    <TextView
        android:id="@+id/tvques_compmessage"
        android:layout_width="545dp"
        android:layout_height="134dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="52dp"
        android:text="TextView"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imbtnques_compnext"
        android:layout_width="154dp"
        android:layout_height="55dp"
        android:layout_marginBottom="111dp"
        android:layout_marginEnd="9dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:srcCompat="@android:drawable/ic_media_next"
        android:layout_marginLeft="-16dp"
        app:layout_constraintLeft_toLeftOf="@+id/cbques_comp2" />

    <TextView
        android:id="@+id/tvques_compemot"
        android:layout_width="441dp"
        android:layout_height="86dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="TextView"
        android:textSize="24sp"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/btnques_compswitch" />

    <ImageButton
        android:id="@+id/imbtnques_comp2"
        android:layout_width="125dp"
        android:layout_height="126dp"
        android:layout_marginRight="106dp"
        android:layout_marginTop="27dp"
        android:background="#a4001eff"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvques_compemot"
        app:srcCompat="@drawable/ic_media_embed_play" />

    <ImageButton
        android:id="@+id/imbtnques_comp1"
        android:layout_width="125dp"
        android:layout_height="126dp"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="28dp"
        android:background="#b73c00ff"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvques_compemot"
        app:srcCompat="@drawable/ic_media_embed_play" />

    <CheckBox
        android:id="@+id/cbques_comp1"
        android:layout_width="145dp"
        android:layout_height="56dp"
        android:layout_marginLeft="-10dp"
        android:layout_marginTop="34dp"
        android:text="Pattern one"
        app:layout_constraintLeft_toLeftOf="@+id/imbtnques_comp1"
        app:layout_constraintTop_toBottomOf="@+id/imbtnques_comp1" />

    <CheckBox
        android:id="@+id/cbques_comp2"
        android:layout_width="151dp"
        android:layout_height="57dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="33dp"
        android:text="Pattern two"
        app:layout_constraintLeft_toLeftOf="@+id/imbtnques_comp2"
        app:layout_constraintTop_toBottomOf="@+id/imbtnques_comp2" />

    <Button
        android:id="@+id/btnques_compfinish"
        android:layout_width="142dp"
        android:layout_height="44dp"
        android:text="Finish"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="116dp"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/cbques_comp1" />

    <Button
        android:id="@+id/btnques_compswitch"
        android:layout_width="274dp"
        android:layout_height="49dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="22dp"
        android:text="Switch to color patterns"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvques_compmessage" />

</android.support.constraint.ConstraintLayout>
