<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/view8"
        android:layout_width="603dp"
        android:layout_height="7dp"
        android:background="#33000000"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/tvseeqcode" />

    <ImageView
        android:id="@+id/imbtnseeqplay"
        android:layout_width="103dp"
        android:layout_height="45dp"
        android:layout_marginEnd="88dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="88dp"
        android:layout_marginTop="8dp"
        android:background="#3f51b5"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_media_play" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="91dp"
        android:layout_height="34dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="Pattern Type:"
        android:textColor="#000000"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="124dp"
        android:layout_height="38dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="15dp"
        android:text="Pattern Emoton:"
        android:gravity="center"
        android:textColor="#000000"
        app:layout_constraintLeft_toRightOf="@+id/textView3"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView21"
        android:layout_width="138dp"
        android:layout_height="36dp"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="15dp"
        android:text="Pattern Code:"
        android:gravity="center"
        android:textColor="#000000"
        app:layout_constraintLeft_toRightOf="@+id/textView12"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvseeqtype"
        android:layout_width="92dp"
        android:layout_height="34dp"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="11dp"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/tvseeqemot"
        android:layout_width="92dp"
        android:layout_height="36dp"
        android:layout_marginLeft="34dp"
        android:gravity="center"
        android:layout_marginTop="7dp"
        app:layout_constraintLeft_toRightOf="@+id/tvseeqtype"
        app:layout_constraintTop_toBottomOf="@+id/textView12" />

    <TextView
        android:id="@+id/tvseeqcode"
        android:layout_width="378dp"
        android:layout_height="68dp"
        android:layout_marginLeft="1dp"
        android:gravity="center"
        android:layout_marginTop="9dp"
        app:layout_constraintLeft_toRightOf="@+id/tvseeqemot"
        app:layout_constraintTop_toBottomOf="@+id/textView21" />
</android.support.constraint.ConstraintLayout>
